{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": false,
    "outDir": "dist",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true
  },
  "include": ["./src"]
}
